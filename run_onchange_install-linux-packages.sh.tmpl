#!/usr/bin/env bash
# vi: set ft=bash
set -e

sudo apt update --yes
sudo apt install --yes \
	bash-completion \
	build-essential \
	curl \
	exa \
	fd-find \
	findutils \
	g++ \
	git \
	git-lfs \
	go-staticcheck \
	golang \
	hugo \
	litecli \
	npm \
	rename \
	ripgrep \
	shellcheck \
	sqlite3 \
	tmux

sudo snap install --classic nvim

if ! command -v pacstall; then
	sudo bash -c "$(curl -fsSL https://pacstall.dev/q/install)"
fi
pacstall --disable-prompts --install \
	exercism-cli-bin \
	github-cli-deb \
	topgrade-bin \
	watchexec-bin

