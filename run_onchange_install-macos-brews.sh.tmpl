{{ if eq .chezmoi.os "darwin" -}}
#!/usr/bin/env bash
# vi: set ft=bash
set -euo pipefail

if ! command -v brew > /dev/null; then
	/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
	eval "$(/opt/homebrew/bin/brew shellenv)"
fi

brew bundle --file=/dev/stdin <<EOF

brew 'bash'
brew 'bash-completion'
brew 'coreutils'
brew 'delve'
brew 'exercism'
brew 'fd'
brew 'gh'
brew 'git'
brew 'git-gui'
brew 'git-lfs'
brew 'gnu-sed'
brew 'gnupg'
brew 'go'
brew 'golangci-lint'
brew 'hugo'
brew 'jq'
brew 'litecli'
brew 'mas'
brew 'neovim'
brew 'node'
brew 'npm'
brew 'openjdk'
brew 'pass'
brew 'pass-otp'
brew 'pinentry-mac'
brew 'ripgrep'
brew 'shellcheck'
brew 'staticcheck'
brew 'tlrc'
brew 'tmux'
brew 'topgrade'
brew 'tpm'
brew 'tree'
brew 'tree-sitter'
brew 'uv'
brew 'watchexec'
brew 'wget'

cask 'appcleaner'
cask 'dehesselle-meld'
cask 'font-jetbrains-mono'
cask 'ghostty'
cask 'logi-options-plus'
cask 'rectangle'
cask 'signal'
cask 'spotify'
cask 'super-productivity'
cask 'vlc'
cask 'sublime-text'
cask 'zotero'

mas 'DaisyDisk', id: 411643860
mas 'DuckDuckGo', id: 663592361
mas 'Telegram', id: 747648890
mas 'WhatsApp', id: 310633997

EOF

# at this point Homebrew bash is expected to be the first in PATH
homebrew_bash={{ lookPath "bash" }}
if ! grep --quiet $homebrew_bash /etc/shells; then
	echo "$homebrew_bash" | sudo tee -a /etc/shells
	chsh -s "$homebrew_bash"
fi

{{ end }}
